extends layout

block content
  h1 Sign In
  form(method = 'post')
    if error
      div.error!= error

    div.field
      label(for='username') User Name: 
      input(type='text', name='username' , id='username', value=username)
      br
      p.error

    div.field
      label(for='password') Password: 
      input(type='password', name='password', id='password')
      br
      p.error

    input.button.submit(type='submit', name='submit', value='Sign In')
    input.button.reset(type='reset', name='reset', value='Reset', class='reset')

    a(href='/regist') Sign up