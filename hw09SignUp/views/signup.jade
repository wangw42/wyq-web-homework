extends layout

block content
  h1 Sign up
  form(method = 'post')
    if error
      div.error!= error

    div.field
      label(for='username') User Name: 
      input(type='text', name='username' , id='username', value=user.username)
      br
      p.error

    div.field
      label(for='password') Password: 
      input(type='password', name='password', id='password', value=user.password)
      br
      p.error

    div.field
      label(for='repeatPassword') Repeat password: 
      input(type='password', name='repeatPassword', value=user.repeatPassword)
      br
      p.error

    div.field
      label(for='sid') Student ID: 
      input(type='text', name='sid', id='sid', value=user.sid)
      br
      p.error

    div.field
      label(for='tel') Tel: 
      input(type='tel', name='tel', id='tel', value=user.tel)
      br
      p.error

    div.field
      label(for='email') E-mail: 
      input(type='email', name='email', id='email', value=user.email)
      br
        
      p.error

    input.button.submit(type='submit', name='submit', value='Submit')
    input.button.reset(type='reset', name='reset', value='Reset', class='reset')

    a(href='/signin') Sign in

  script(type="text/javascript" src='javascripts/signup.js')
  script(type="text/javascript" src='javascripts/validator.js') 