doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Sign in
    link(rel='stylesheet', type='text/css', href='style.css')
    script(src='https://code.jquery.com/jquery-3.1.1.min.js')
    script(src='signup.js')
    script(src='validator.js')
  body
    h1 Sign in
    form(method = 'post')
      if error
        div.error!= error

      div.username
        label(for='username') User Name: 
        input(type='text', name='username' , id='username', value=user.username)
        br
        p.error

      div.sid
        label(for='sid') Student ID: 
        input(type='text', name='sid', id='sid', value=user.sid)
        br
        p.error

      div.tel
        label(for='tel') Tel: 
        input(type='tel', name='tel', id='tel', value=user.tel)
        br
        p.error

      div.email
        label(for='email') E-mail: 
        input(type='email', name='email', id='email', value=user.email)
        br
        
        p.error

      input.button.submit(type='submit', name='submit', value='Submit')
      input.button.reset(type='reset', name='reset', value='Reset')